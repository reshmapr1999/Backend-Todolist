    <!-- Left: Task Form -->
    <div class="col-md-6 m-4 task-form-container">
        <form action="/add-task" method="POST" class="card p-4 shadow">
            <div class="mb-3">
                <label class="form-label">Task Name</label>
                <input type="text" name="title" class="form-control" required placeholder="Enter the task...">
            </div>

            <div class="mb-3 row">
                <div class="col-md-6">
                    <label class="form-label">Category</label>
                    <select name="category" class="form-select" id="categoryDropdown" onchange="toggleCustomCategory()">
                        <option value="">Select category</option>
                        <option value="Work">Work</option>
                        <option value="Personal">Personal</option>
                        <option value="Shopping">Shopping</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Due Date</label>
                    <input type="date" name="dueDate" class="form-control">
                </div>
            </div>

            <!-- Custom Category Input -->
            <div class="mb-3" id="customCategoryDiv" style="display: none;">
                <label class="form-label">Custom Category</label>
                <input type="text" name="customCategory" id="customCategory" class="form-control">
            </div>

            <button type="submit" class="btn btn-success">Add Task</button>
        </form>
    </div>
